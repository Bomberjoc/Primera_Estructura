---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<link rel="icon" type="image/png" href="/Aliexpress_icon.png">
		<title>{title}</title>
	</head>
	<body class="grid">
		<!-- Primera Barra -->
		<div class="bg-black">
			<div class="flex items-center justify-evenly pr-10">
				<!-- Logo  -->
				<img src="../../public/aliexpress_logo.WEBP" alt="Logo_AliExpress" class="h-16 ml-20">
				<!-- Barra de busqueda -->
				<div class="flex bg-white rounded-full relative w-2/4">
					<input type="search" placeholder="iphone 12 pro max" class="h-9 rounded-full  p-5 pr-10 outline-none" />
					<button class=" rounded-full bg-black m-1 top-[2px] right-1 absolute inline-block px-3 text-white p-1">
						<Icon name="mdi:search" class="size-6"/>
					</button>
				</div>
				<div class="w-100 bg-white">
				</div>
				<div class="flex text-white items-center ml-8 cursor-pointer">
					<Icon name="mdi:qrcode" class="size-8  mr-1"/>
					<p class="w-24 text-xs">Descarga la app de AliExpress</p>
				</div>
				<div class="flex text-white items-center  cursor-pointer">
					<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 36 36" {...props} class="mr-1 size-6">
						<path fill="#fbd116" d="M32 5H4a4 4 0 0 0-4 4v9h36V9a4 4 0 0 0-4-4" />
						<path fill="#22408c" d="M0 18h36v7H0z" />
						<path fill="#ce2028" d="M0 27a4 4 0 0 0 4 4h28a4 4 0 0 0 4-4v-2H0z" />
					</svg>
					<div class="w-12 leading-3">
						<p class="text-xs">ES/</p>
						<div class="flex">
							<strong class="text-xs ">COP</strong>
							<Icon name="material-symbols:keyboard-arrow-down" class='size-5'/>
						</div>
					</div>
				</div>
				<div class="flex text-white items-center  cursor-pointer">
					<Icon name="mdi:person-outline" class="size-10 mr-1"/>
					<div class="w-40 leading-3">
						<p class="text-xs">¡Bienvenido</p>
						<div class="flex">
							<strong class="text-xs ">Identifícate / Regístrate</strong>
							<Icon name="material-symbols:keyboard-arrow-down" class="size-5" />
						</div>
						
					</div>
				</div>
				<div class="flex text-white items-center ml-1 cursor-pointer">
					<Icon name="mingcute:shopping-cart-1-line" class='size-8 mr-1' />
					<div class="flex-col justify-center w-8">
						<div class="bg-white w-6  flex justify-center text-xs rounded-2xl text-black">
							<strong>0</strong>
						</div>
						<strong class="text-xm">
							Cesta
						</strong>
						
					</div>
				</div>	
			</div>
		</div>

		<!-- Segunda Barra -->
		<div class="bg-black flex text-white p-2 justify-around w-full py-3">

			<div class="flex align-middle text-center items-center justify-between w-9/12 ">
				<!-- Boton de categorías -->
				<div class="flex   justify-start rounded-full items-center">
					<a class="h-10 flex relative text-lg text-center group px-4 bg-[#474747] rounded-full items-center" href="#">
						<img src="../../public/menu.svg" alt="" class="mr-2">
						Todas las categorías
						<Icon name="material-symbols:keyboard-arrow-down" class="size-5 ml-3" />
						<menu class="hidden group-hover:block w-full left-0 absolute top-0 rounded-2xl bg-slate-100 text-black shadow-md border-slate-100">
							<div class="flex h-10 px-3 items-center font-semibold">
								<img src="../../public/menu_black.svg" alt="" class="mr-2">
								<p>Todas las categorías</p>
								<Icon name="material-symbols:keyboard-arrow-up" class='size-5 ml-3' />
							</div>
							<ul>
								<li>opcion 1</li>
								<li>opcion 2</li>
								<li>opcion 3</li>
							</ul>
						</menu>
					</a>
				</div>
				<div class="flex cursor-pointer hover:bg-[#474747] rounded-3xl h-full items-center px-4">
					<p class="text-base ">
						NN
					</p>
				</div>
				<div class="flex cursor-pointer hover:bg-[#474747] rounded-3xl h-full items-center px-4">
					<p class="text-base ">
						Superventas
					</p>
				</div>
				<div class="flex cursor-pointer hover:bg-[#474747] rounded-3xl h-full items-center px-4">
					<p class="text-base ">
						Mejores Marcas
					</p>
				</div>
				<div class="flex  cursor-pointer hover:bg-[#474747] rounded-3xl h-full items-center px-4">
					<p class="text-base ">
						Hogar y jardín
					</p>
				</div>
				<div class="flex cursor-pointer hover:bg-[#474747] rounded-3xl h-full items-center px-4">
					<p class="text-base ">
						Cabello y pelucas
					</p>
				</div>
				<div class="flex  cursor-pointer hover:bg-[#474747] rounded-3xl h-full items-center px-4">
					<p class="text-base ">
						Moda Hombre
					</p>
				</div>
				<div class="flex  cursor-pointer hover:bg-[#474747] rounded-3xl h-full items-center px-4">
					<p class="text-base ">
						Accesorios
					</p>
				</div>
				<div class="flex  cursor-pointer hover:bg-[#474747] rounded-3xl h-full items-center px-4">
					<p class="text-base ">
						Electrónica
					</p>
				</div>
				<div class="flex items-center group relative cursor-pointer hover:bg-[#474747] rounded-3xl h-full my-1 px-4">
					<p class="text-base ">
						Más
					</p>
					<Icon name="material-symbols:keyboard-arrow-down" class="size-5" />
					<menu class="hidden group-hover:block w-44 h-36 left-0 absolute top-10 rounded-2xl text-sm bg-white text-black shadow-md border-white">
						<ul class="flex flex-col justify-around px-2 h-full">
							<li>Hogar e iluminación</li>
							<li>Electrodo-mésticos</li>
							<li>Motor</li>
						</ul>
					</menu>
				</div>
				
			</div>
			
		</div>
		<!-- Sections  -->
		<div class="m-auto ">
			<!-- Imagen 3r Banner -->
			<div class="">
				<img src="3rbannerAE.webp" alt="" class="h-28  my-5 ">
			</div>
			<!-- Bloque de productos -->
			<div class="flex w-full border border-black justify-between">
				<div class="flex flex-col gap-4">
					<!-- 1 Cuadro -->
					<div class=" bg-[#F5F5F5] p-6 rounded-3xl text-center">
						<div class="text-lg h-12 flex">
							<a href="#" class="rounded-3xl bg-[#191919] text-white py-2 px-9">
								<strong>Regístrate</strong>
							</a>
							<div class="w-2"></div>
							<a href="#" class="rounded-3xl bg-white text-black py-2 px-14 border border-black">
								<strong>Entrar</strong>
							</a>	
						</div>
						<p class="text-xs pt-3 pb-2">
							O continúa con
						</p>
						<div class=" flex justify-center gap-5 text-3xl">
							<Icon name="logos:facebook" />
							<Icon name="logos:google-icon" />
							<Icon name="logos:twitter" />
							<Icon name="logos:apple" />
						</div>
					</div>
					<!-- 2 Cuadro -->
					<div class=" py-7 px-4 rounded-3xl bg-[#FFF5EF] gap-5 flex flex-col">
						<div>
							<strong class="text-red-500 text-2xl">Oferta de bienvenida</strong>
							<p>Tu precio exclusivo</p>
						</div>
						<div class="flex justify-center items-center gap-3">
							<div class="w-8 h-16 rounded-2xl text-center items-center justify-center flex bg-[#7F7A77] hover:cursor-pointer">
								<Icon name="material-symbols:keyboard-arrow-left" class="size-6 text-white" />
							</div>
							<div class="flex flex-col">
								<img src="cama_ben10.jpg" alt="" class="size-56 rounded-2xl">
								<div class="flex gap-2 items-end">
									<strong class="text-red-600 text-lg">
										COP80,250.33
									</strong>
									<p class="line-through text-gray-500">
										COP500,230.33
									</p>
								</div>
							</div>
							<div class="w-8 h-16 rounded-2xl text-center items-center justify-center flex bg-[#7F7A77] hover:cursor-pointer">
								<Icon name="material-symbols:keyboard-arrow-right" class="size-6 text-white" />
							</div>
						</div>

					</div>
				</div>
				<div class="border border-black">
					3
				</div>
				<div class="flex flex-col">
					<div class="border border-black">
						4

					</div>
					<div class="border border-black">
						5

					</div>
				</div>
			</div>
		</div>
		
		

		
		<div class=" items">
			<!-- {
				items.map((item) =><div>
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><ellipse cx="12.07" cy="7" rx="3" ry="1.71"></ellipse><path d="M12.07 22c4.48 0 8-2.2 8-5V7c0-2.8-3.52-5-8-5s-8 2.2-8 5v10c0 2.8 3.51 5 8 5zm0-18c3.53 0 6 1.58 6 3a2 2 0 0 1-.29.87c-.68 1-2.53 2-5 2.12h-1.39C8.88 9.83 7 8.89 6.35 7.84a2.16 2.16 0 0 1-.28-.76V7c0-1.42 2.46-3 6-3z"></path></svg>
									Nombre del Producto
			</div>	)
			}			 -->
		</div>
		
	</body>
</html>
<style is:global>
	.items{
		display: flex;
		height: 80px;
	}
	.items div {
		height: 100%;
		max-width: 120px;
		text-align: center;
		/* background-color: red; */
		border: 1px solid gray;
		border-radius: 4px;
		margin-right: 3px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.main_menu {
		height: 40px;
		background-color: #EE4D2D;
		display: flex;
	}
	.main_menu a{
		transition: background 300ms ease-in-out;
		height: 100%;
		display: flex;
		align-items: center;
		color: #fff;
		padding: 0 12px;
		text-decoration: none;
	}
	.main_menu a:hover{
		background-color: #e99c37;
		
	}
	
	.categories{
		height: 80px;
	}
	.banner{
		height: 240px;
	}	
	
	
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
