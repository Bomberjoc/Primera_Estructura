---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-zinc-800">
			<div class="flex items-center">
				<img src="../../public/aliexpress_logo.WEBP" alt="" class="h-16 ml-20">
				<button class="rounded-full bg-slate-600 h-[50%] p-1 mr-5">
					<img src="../../public/menu.svg" alt="">
				</button>
				<div class="flex bg-white rounded-full relative w-2/4">
					<input type="search" placeholder="iphone 12 pro max" class="h-9 rounded-full  p-5 pr-10 outline-none" />
					<button class=" rounded-full bg-black m-1 top-[2px] right-1 absolute inline-block px-3 text-white p-1">
						<Icon name="mdi:search" class="size-6"/>
					</button>
				</div>
				<div class="w-100 bg-white">
				</div>
				<div class="flex text-white items-center ml-8 cursor-pointer">
					<Icon name="mdi:qrcode" class="size-8  mr-1"/>
					<p class="w-20 text-xs">Download the AliExpress app</p>
				</div>
				<div class="flex text-white items-center ml-8 cursor-pointer">
					<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 36 36" {...props} class="mr-1 size-6">
						<path fill="#fbd116" d="M32 5H4a4 4 0 0 0-4 4v9h36V9a4 4 0 0 0-4-4" />
						<path fill="#22408c" d="M0 18h36v7H0z" />
						<path fill="#ce2028" d="M0 27a4 4 0 0 0 4 4h28a4 4 0 0 0 4-4v-2H0z" />
					</svg>
					<p class="w-px text-xs">EN/ COP</p>
					
				</div>
				<div class="flex text-white items-center ml-12 cursor-pointer">
					<Icon name="mdi:person-outline" class="size-8 mr-1"/>
					<div class="w-28">
						<p class="text-xs">Welcome</p>
						<strong class="text-xs ">Sign in / Register</strong>
					</div>
				</div>
			</div>
			
		</div>
		<div class=" banner">
			BANNER
		</div>
		<nav class=" main_menu">
			<a href="/">Inicio</a> <a href="/productos">Productos</a> <a href="/ofertas">Ofertas</a>
		</nav>
		<div class=" items">
			<!-- {
				items.map((item) =><div>
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><ellipse cx="12.07" cy="7" rx="3" ry="1.71"></ellipse><path d="M12.07 22c4.48 0 8-2.2 8-5V7c0-2.8-3.52-5-8-5s-8 2.2-8 5v10c0 2.8 3.51 5 8 5zm0-18c3.53 0 6 1.58 6 3a2 2 0 0 1-.29.87c-.68 1-2.53 2-5 2.12h-1.39C8.88 9.83 7 8.89 6.35 7.84a2.16 2.16 0 0 1-.28-.76V7c0-1.42 2.46-3 6-3z"></path></svg>
									Nombre del Producto
			</div>	)
			}			 -->
		</div>
		<div class=" categories">
			Ofertas
		</div>
		<div class="">
			<slot />
		</div>
		<div class=" footer">
			ESTE ES EL FOOTER
		</div>
	</body>
</html>
<style is:global>
	.items{
		display: flex;
		height: 80px;
	}
	.items div {
		height: 100%;
		max-width: 120px;
		text-align: center;
		/* background-color: red; */
		border: 1px solid gray;
		border-radius: 4px;
		margin-right: 3px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.main_menu {
		height: 40px;
		background-color: #EE4D2D;
		display: flex;
	}
	.main_menu a{
		transition: background 300ms ease-in-out;
		height: 100%;
		display: flex;
		align-items: center;
		color: #fff;
		padding: 0 12px;
		text-decoration: none;
	}
	.main_menu a:hover{
		background-color: #e99c37;
		
	}
	
	.categories{
		height: 80px;
	}
	.banner{
		height: 240px;
	}	
	
	html, body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
